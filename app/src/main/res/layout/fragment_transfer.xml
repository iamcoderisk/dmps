<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                tools:context=".TransferFragment">
	<RelativeLayout
			android:layout_width="match_parent"
			android:id="@+id/round_layout"
			android:background="@color/colorPrimary"
			android:orientation="horizontal"
			android:textAlignment="center"
			android:gravity="center_horizontal"
			android:layout_height="200dp">
		
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Transfer Funds"
				android:textStyle="bold"
				android:textColor="@color/whiteColor"
				android:gravity="center_horizontal"
				android:textAlignment="center"
				android:layout_marginTop="50dp"
				android:textSize="20dp"/>
		
		<LinearLayout
				android:layout_width="wrap_content"
				android:gravity="center_horizontal"
				android:padding="10dp"
				android:layout_marginTop="90dp"
				android:layout_height="wrap_content">
				
			<Button
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:background="@drawable/round_bg2"
					android:text="@string/BankTransfer"/>
			<View
					android:id="@+id/view"
					android:layout_height="fill_parent"
					android:layout_width="2dp"
					android:paddingLeft="4dp"
					android:layout_centerHorizontal="true"
			/>
			<Button
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:background="@drawable/round_bg"
					android:layout_alignParentEnd="true"
					android:textColor="@color/whiteColor"
					android:text="@string/WalletTransfer"/>
		
		</LinearLayout>
		
	
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:layout_below="@id/round_layout"
			android:layout_marginTop="30dp">
		
		<EditText
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:hint="Amount"
				android:textColorHint="@color/tintedFade"
				android:paddingLeft="14dp"
				android:textSize="20sp"
				android:id="@+id/amount"
				android:inputType="textPersonName"
				android:layout_marginTop="20dp"
				android:background="@drawable/round_inptut_fade"
		/>
		
		<EditText
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:hint="Account number"
				android:textColorHint="@color/tintedFade"
				android:paddingLeft="14dp"
				android:textSize="20sp"
				android:id="@+id/accountNUmber"
				android:inputType="number"
				android:layout_marginTop="20dp"
				android:layout_below="@id/amount"
				android:background="@drawable/round_inptut_fade"
		/>
		<Button android:layout_width="match_parent"
		        android:layout_below="@id/accountNUmber"
		        android:background="@drawable/button_round_fade"
		        android:layout_marginTop="20dp"
		        android:text="continue"
		        android:textAlignment="center"
		        android:textSize="20sp"
		        
		        android:id="@+id/fundBtn"
		        android:textColor="@color/whiteColor"
		        android:textAllCaps="false"
		        android:layout_height="60dp"/>
	</RelativeLayout>



</RelativeLayout>