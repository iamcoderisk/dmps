<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		
		tools:context=".HomeFragment">
	<RelativeLayout
			android:layout_marginBottom="?actionBarSize"
			android:layout_width="match_parent"
			android:id="@+id/round_layout"
			android:background="@color/colorPrimary"
			android:orientation="horizontal"
			android:layout_height="200dp">
		
		<LinearLayout
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:layout_margin="10dp"
		              android:layout_marginTop="30dp"
		              android:orientation="horizontal" >
			
			<TextView
					android:id="@+id/textView1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Hello"
					android:layout_marginTop="30dp"
					android:textColor="@color/whiteColor"
					android:textSize="20sp"
					android:maxLines="3"  />
			
			<TextView
					android:id="@+id/displayName"
					android:layout_marginTop="30dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""
					android:textSize="20dp"
					android:textColor="@color/whiteColor"
					android:maxLines="3"  />
		
		</LinearLayout>
		
		<ImageView
				android:id="@+id/user_profile"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_alignParentTop="true"
				android:layout_marginRight="30dp"
				android:layout_alignParentRight="true"
				android:layout_marginTop="20dp"
				android:padding="10dp"
				android:src="@drawable/user_picture" />
		
		<ImageView
				android:id="@+id/fund_wallet"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_alignParentTop="true"
				android:layout_marginRight="30dp"
				android:layout_alignParentRight="true"
				
				android:layout_below="@id/user_profile"
				android:layout_marginTop="80dp"
				android:padding="10dp"
				android:src="@drawable/fund_wallet" />
		
			
		<!-- display available balance -->
		
		<RelativeLayout
				android:layout_width="match_parent"
				android:padding="14dp"
				android:layout_marginTop="60dp"
				android:gravity="center_horizontal"
				android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
			          android:text="Available Balance"
			          android:textColor="@color/whiteColor"
			          android:textAlignment="center"
			          android:id="@+id/balance"
			          android:paddingLeft="30dp"
			          android:layout_height="wrap_content"/>
			<TextView android:layout_width="wrap_content"
			          android:text="â‚¦"
			          android:textColor="@color/whiteColor"
			          android:paddingLeft="10dp"
			          android:layout_marginTop="30dp"
			          android:layout_height="wrap_content"/>
			<TextView android:layout_width="wrap_content"
			          android:text="150,000.00"
			          android:textSize="30sp"
			          android:id="@+id/real_balance"
			          android:textColor="@color/whiteColor"
			          android:layout_marginLeft="20dp"
			          android:layout_marginTop="20dp"
			          android:layout_height="wrap_content"/>
		
		</RelativeLayout>
	
	</RelativeLayout>
	
	<GridLayout
			android:layout_width="match_parent"
			android:columnCount="2"
			android:rowCount="2"
			android:id="@+id/gridLayout"
			android:padding="14dp"
			android:alignmentMode="alignMargins"
			android:columnOrderPreserved="false"
			android:layout_marginTop="200dp"
			android:layout_height="wrap_content">
		
		<androidx.cardview.widget.CardView
				android:id="@+id/payBills"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:layout_marginBottom="30dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="@color/elevator"
				app:cardCornerRadius="8dp"
		>
			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					android:orientation="vertical"
					android:gravity="center_horizontal|center_vertical">
				<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:scaleType="centerCrop"
						android:layout_marginRight="30dp"
						android:layout_marginLeft="30dp"
						android:layout_gravity="center_horizontal"
						android:src="@drawable/request"/>
				<TextView android:layout_width="wrap_content"
				          android:text="Request"
				          android:textSize="10sp"
				          android:layout_marginTop="10dp"
				          android:textColor="@color/extended_color"
				          android:textStyle="bold"
				          android:textAlignment="center"
				          android:layout_height="wrap_content"/>
			
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
				android:id="@+id/transfer_card"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:layout_columnWeight="1"
				android:layout_rowWeight="1"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:layout_marginBottom="30dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="@color/elevator"
				app:cardCornerRadius="8dp"
		>
			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					android:orientation="vertical"
					android:gravity="center_horizontal|center_vertical">
				<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:scaleType="centerCrop"
						android:layout_marginRight="30dp"
						android:layout_marginLeft="30dp"
						android:layout_gravity="center_horizontal"
						android:src="@drawable/mobile"/>
				<TextView android:layout_width="wrap_content"
				          android:text="Buy Vtu"
				          android:textSize="10sp"
				          android:textColor="@color/extended_color"
				          android:textStyle="bold"
				          android:layout_marginTop="10dp"
				          android:textAlignment="center"
				          android:layout_height="wrap_content"/>
			
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
	</GridLayout>
	
	<View android:layout_width="wrap_content"
	      android:background="@color/elevationColor"
	      android:layout_marginTop="320dp"
	      android:layout_height="1dp"/>

	<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_marginTop="330dp"
			android:padding="2dp"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="match_parent"
				android:textColor="@color/darkText"
				android:text="Transactions"
				android:id="@+id/trans"
				android:layout_height="wrap_content"/>
		<ListView android:layout_width="match_parent"
		          android:layout_marginTop="30dp"
		          android:id="@+id/listTransactions"
		          android:layout_height="wrap_content"/>
	</RelativeLayout>
	





</RelativeLayout>