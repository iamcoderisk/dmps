<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".ProfileSettings">
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:id="@+id/round_layout"
			android:background="@drawable/bent_path"
			android:orientation="horizontal"
			android:textAlignment="center"
			android:gravity="center_horizontal"
			android:layout_height="200dp">
	
	<ImageView
			android:id="@+id/upload"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true"
			android:layout_marginTop="20dp"
			android:padding="10dp"
			android:src="@drawable/ekemini" />
		<Button
				android:layout_width="wrap_content"
				android:text="Choose Image"
				android:layout_below="@id/upload"
				android:background="@color/colorAccent"
				android:textColor="@color/whiteColor"
				android:layout_centerInParent="true"
				android:id="@+id/chooseImage"
		        android:layout_height="wrap_content"/>
	
	<ImageView
			android:id="@+id/logoutBtn"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentTop="true"
			android:layout_marginRight="30dp"
			android:layout_alignParentRight="true"
			android:layout_marginTop="20dp"
			android:padding="10dp"
			android:src="@drawable/logout" />
</RelativeLayout>
	
	
	<RelativeLayout android:layout_width="wrap_content"
	                android:layout_below="@id/text_holder"
	                android:layout_marginTop="270dp"
	                android:padding="10dp"
	                android:id="@+id/center_holder"
	                android:layout_height="wrap_content">
		<EditText
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:hint="Prince Darlington"
				android:id="@+id/fullName"
				android:textColorHint="@color/extended_color"
				android:paddingLeft="14dp"
				android:textSize="20sp"
				android:enabled="false"
				android:inputType="textPersonName"
				android:background="@drawable/round_inptut_fade"
		/>
		
		<EditText
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:hint="email"
				android:layout_below="@id/fullName"
				android:id="@+id/userEmail"
				android:textColorHint="@color/extended_color"
				android:paddingLeft="14dp"
				android:textSize="20sp"
				android:enabled="false"
				android:inputType="textPersonName"
				android:layout_marginTop="20dp"
				android:background="@drawable/round_inptut_fade"
		/>
		<Button android:layout_width="match_parent"
		        android:layout_below="@id/userEmail"
		        android:background="@drawable/button_round_fade"
		        android:layout_marginTop="20dp"
		        android:text="Upload Image"
		        android:textAlignment="center"
		        android:textSize="20sp"
		        android:id="@+id/uploadImage"
		        android:textColor="@color/whiteColor"
		        android:textAllCaps="false"
		        android:layout_height="60dp"/>
	
	</RelativeLayout>
	
</RelativeLayout>